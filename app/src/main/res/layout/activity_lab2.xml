<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#353535"
    tools:context=".Lab2">

    <EditText
        android:id="@+id/Xenter"
        style="@style/Widget.AppCompat.AutoCompleteTextView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="52dp"
        android:layout_marginLeft="52dp"
        android:layout_marginEnd="52dp"
        android:layout_marginRight="52dp"
        android:layout_marginBottom="59dp"
        android:background="#4C4C4C"
        android:ems="10"
        android:hint="Enter X"
        android:inputType="number|numberDecimal"
        android:textColor="#CFCFCF"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/FileText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <Button
        android:id="@+id/calculatebutton"
        android:layout_width="242dp"
        android:layout_height="0dp"
        android:layout_marginBottom="33dp"
        android:background="#787878"
        android:onClick="onButtonClick"
        android:text="Calculate"
        android:textColor="#DADADA"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/infobutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/FileText" />

    <Button
        android:id="@+id/infobutton"
        android:layout_width="192dp"
        android:layout_height="77dp"
        android:layout_marginBottom="16dp"
        android:background="#787878"
        android:onClick="onInfoClick"
        android:text="About Me"
        android:textColor="#DADADA"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calculatebutton" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="88dp"
        android:text="Lab 2"
        android:textColor="#F6F6F6"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/Xenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/FileText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="43dp"
        android:layout_marginLeft="43dp"
        android:layout_marginEnd="43dp"
        android:layout_marginRight="43dp"
        android:layout_marginBottom="43dp"
        android:text="Result"
        android:textColor="#CACACA"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/calculatebutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Xenter" />

</androidx.constraintlayout.widget.ConstraintLayout>